package program8;

class ArmstrongNumbers {
	public void isArmstrongNo(int num) {
		int digit;
		int sum = 0;
		int orgNum = num;
		while (num != 0) {
			digit = num % 10;
			num = num / 10;
			sum += (digit ^ 4);
		}
		if (sum == orgNum) {
			System.out.println(orgNum + " is Armstrong Number!");
		}
	}
}

public class Program8 {

	public static void main(String[] args) {

		ArmstrongNumbers anum = new ArmstrongNumbers();
		for (int i = 1; i <= 500; i++)
			snum.isStrongNo(i);
	}
}
